<html lang="en">
<head>
<title>Applications</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>

<div class="topnav">
  <a href="/pets">Pets</a>
  <a href="/shelters">Shelters</a>
</div>

<div class="content">
  <h1>Applications</h1>
  <br>
  <ul>
  <h3><% @applications.each do |application| %></h3>
    <h2><li><%= link_to "Application ##{application.id}", "/applications/#{application.id}" %></h2>
    <p>User ID: <%= application.user_id %></p>
    <p>Status: <%= application.status %></p>
  <% end %>
  </ul>
</div>

</body>

</html>
