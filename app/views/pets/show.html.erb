<h1><%= @pet.name %></h1>

<%= link_to 'Pets', '/pets' %><br>
<%= link_to 'Shelters', '/shelters' %><br>

<img src="<%= @pet.image %>" alt="pet image">
<p>Description: <%= @pet.description %></p>
<p>Age: <%= @pet.age %></p>
<p>Sex: <%= @pet.sex %></p>
<p>Status: <%= @pet.status %></p>

<%= link_to 'Update Pet', "/pets/#{@pet.id}/edit" %>
<%= link_to 'Delete Pet', "/pets/#{@pet.id}/delete" %>
