<h1>Add a Pet for Adoption</h1>

<%= link_to 'Pets', '/pets' %><br>
<%= link_to 'Shelters', '/shelters' %><br><br>

<%= form_tag "/shelters/#{params[:id]}/pets" do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %><br/><br/>
    <%= label_tag :description %>
    <%= text_field_tag :description %><br/><br/>
    <%= label_tag :age %>
    <%= text_field_tag :age %><br/><br/>
    <%= label_tag :sex %>
    <%= text_field_tag :sex %><br/><br/>
    <%= label_tag :image %>
    <%= text_field_tag :image %><br/><br/>
    <%= submit_tag 'Create Pet' %>
  <% end %>
